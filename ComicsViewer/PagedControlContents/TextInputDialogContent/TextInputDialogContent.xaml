<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="using:ComicsViewer.Controls"
    x:Class="ComicsViewer.Pages.TextInputDialogContent"
    mc:Ignorable="d"
    d:RequestedTheme="Dark"
    Width="400"
    >
    <Page.Background>
        <ThemeResource ResourceKey="ApplicationPageBackgroundThemeBrush"/>
    </Page.Background>
    <StackPanel>
        <uc:EditItemTextBox x:Name="EditItemTitleTextBox" 
                            Margin="0 12 0 0"
                            Header="{x:Bind Properties.TextBoxHeader}"
                            SaveButton="{x:Bind SubmitButton}" />
        
        <Grid Margin="0 12 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1" 
                    x:Name="SubmitButton"
                    Content="{x:Bind Properties.SubmitText}" />
            <Button Grid.Column="2" Margin="12 0 0 0" 
                    Content="{x:Bind Properties.CancelText}" 
                    Click="CancelButton_Click" />
        </Grid>
    </StackPanel>
</Page>
